/**index.wxss**/
.haibao{
  height: 350rpx;
  width: 100%;
}
.swiper-image {
  height: 100%;
  width: 100%;
}
.img{
  width: 30px;
  height: 30px;
  padding-left: 10px;
  padding-top: 10px;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:99%;
  height:60rpx;
  margin-top: 1px;
  background-color:whitesmoke;
  border:1rpx solid #ebe7e7;
  border-radius: 50rpx;
  position:relative;
  left: 1px;

}

/* 搜索框提示文字样式 */
.search input{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:26rpx; 
}

/* 搜索框小图标 */
.search image{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}

.one{
  width: 110px;
  height: 100px;
  padding-top: 20px;
}

.article{
   padding-top: 12px;
   padding-left: 5px;
   line-height: 35px;
   font-size: 13px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  padding-left:  20px;
  box-sizing: border-box;
  
} 
.name{
  font-size: 11px;
  position: relative;
  left: 20px;
  top: 5px;
}
.eye{
  position: relative;
  float: right;
  width: 25px;
  height: 25px;
  right:40px;
  top:-18px;

}

.num{
  position: relative;
  display: block;
  float:right;
  top:-15px;
  right: -15px;
  font-size: 12px;
}
.text{
  font-size: 14px;
  
  padding-top: 8px;
}